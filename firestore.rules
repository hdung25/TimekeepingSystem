rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if user is logged in
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- SIMPLE & STANDARD RULES ---
    
    // 1. Users 
    // Allow any authenticated user to read any user profile (needed for mapping names/roles)
    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow write: if isAuthenticated(); // Temporary for Admin updates
    }

    // 2. Attendance Logs
    match /attendance_logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    // 3. Schedules
    match /schedules/{dateId} {
      allow read, write: if isAuthenticated();
    }

    // 4. Settings
    match /settings/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
